	<%- include("../partials/header") %>

	<div class="container">
		<div class="row text-center">
			<h1>Edit <%= campground.name %></h1>
			<div style="width: 30%; margin: 20px auto;">
				<form action="/campgrounds/<%= campground._id %>?_method=PUT"
					  method="POST">
					<div class="form-group">
						<input class="form-control" name="campground[name]" 
						type="text" value="<%= campground.name %>">
					</div>
					<div class="form-group">
						<input class="form-control" 
							   name="campground[image]" type="text"            							           value="<%= campground.image %>">
					</div>
					<div class="form-group">
						<input class="form-control"
							   name="campground[description]" type="text"            							value="<%= campground.description %>"">
					</div>
						 <button class="btn btn-lg btn-primary 
										btn-block">Submit</button>
					<div class="form-group">

					</div>

				</form>
				<a href="/campgrounds">Go Back</a>
			</div>

		</div>



	</div>

	<%- include("../partials/footer") %>