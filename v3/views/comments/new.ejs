<%- include("../partials/header") %>

<div class="container">
	<div class="row text-center">
		<h1>Add new Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin: 20px auto;">
        	<form action="/campgrounds/<%= campground._id %>/comments" 
				  method="POST">
        		<div class="form-group">
        			<input class="form-control" name="comment[text]" 
					type="text" placeholder="Enter Comment">
        		</div>
        		<div class="form-group">
        			<input class="form-control" 
						 name="comment[author]" type="text"            							placeholder="Enter Author">
        		</div>
				
			    <button class="btn btn-lg btn-primary 
									btn-block">
					Submit
				</button>
			    <div class="form-group">
			    	
			    </div>
			
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
		
	</div>

	

</div>

<%- include("../partials/footer") %>